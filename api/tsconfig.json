{
  "extends": "../backend/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist"
  },
  "include": [
    "**/*.ts",
    "../backend/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../backend/src/**/*.test.ts"
  ]
}